<h1>EAT-DA-BURGER!</h1>

<h2>Burgers not yet Eaten</h2>

<ul>
  {{#each burgers}}
   <li>{{this.burger_name}} {{>burgers/burger-block}}</li>
      
   
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger:</label>
    <input type="text" id="burg" name="name">
  </div>

  <button type="submit">Add Burger</button>
</form>