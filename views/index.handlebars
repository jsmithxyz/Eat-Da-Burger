<h1>EAT DA BURGER!</h1>

<h2>Burgers that have not been devoured!</h2>

<ul>
  {{#each burgers}}
   
      {{#unless devoured}}
         <li>{{this.burger_name}} {{> burgers/burger-block devoured=false}}</li>
      {{/unless}}
    
  {{/each}}
</ul>

<h2>Burgers that have been devoured!</h2>

<ul>
  {{#each burgers}}
    {{#if devoured}}
      {{this.burger_name}} {{> burgers/burger-block devoured=true}}
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="burger">Burger:</label>
    <input type="text" id="burg" name="name">
  </div>

  <div class="form-group">
    <label for="dev">Devoured?</label><br>
    <input type="radio" name="devoured" value="1" checked> Devoured!<br>
    <input type="radio" name="devoured" value="0"> Not Consumed!
  </div>

  <button type="submit">Add Burger</button>
</form>
